@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-6 margin-top-20">
        <a href="@Url.Action("Withdraw", "Transaction")" class="btn btn-primary btn-large btn-block">
            Withdrawal
        </a>
        <a href="#" class="btn btn-primary btn-large btn-block">
            Quick Cash $100
        </a>
        <a href="@Url.Action("Balance", "CheckingAccount")" class="btn btn-primary btn-large btn-block">
            Balance Inquery
        </a>
    </div>
    <div class="col-md-6 margin-top-20">
        <a href="@Url.Action("Statement", "CheckingAccount")" class="btn btn-primary btn-large btn-block">
            Print Statement
        </a>
        <a href="@Url.Action("Transfer", "Transaction")" class="btn btn-primary btn-large btn-block">
            Transfer Funds
        </a>
        <a href="@Url.Action("Deposit", "Transaction",
                new { checkingAccountId = ViewData["CheckingAccountId"] })"
           class="btn btn-primary btn-large btn-block">
           Deposit
        </a>
    </div>
</div>

